<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="java.util.List" />

        <import type="com.omerilhanli.newsapimvvm.asistant.callback.ItemClickListener" />

        <import type="com.omerilhanli.newsapimvvm.mvvm.model.entity.observable.ViewVisibility" />

        <import type="com.omerilhanli.newsapimvvm.mvvm.model.entity.Article" />

        <import type="com.omerilhanli.newsapimvvm.mvvm.view.adapter.ArticleAdapter" />

        <variable
            name="adapter"
            type="ArticleAdapter" />

        <variable
            name="articles"
            type="List&lt;Article&gt;" />

        <variable
            name="listener"
            type="ItemClickListener" />

        <variable
            name="listVisibility"
            type="ViewVisibility" />

        <variable
            name="progressVisibility"
            type="ViewVisibility" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:abc="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="@color/bg_search_zone"
            android:elevation="2dp"
            android:focusable="false"
            android:queryHint="@string/search_hint" />

        <TextView
            android:id="@+id/tvEmptyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchView"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp"
            android:drawableTop="@drawable/icn_nothing"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:text="@string/txt_please_typing"
            android:textSize="16sp"
            android:visibility="@{!listVisibility.visible}" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/searchView"
            android:orientation="vertical"
            abc:adapter="@{adapter}"
            abc:adapterData="@{articles}"
            abc:adapterListener="@{listener}"
            abc:visibility="@{listVisibility.visible}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{progressVisibility.visible}" />

    </RelativeLayout>
</layout>